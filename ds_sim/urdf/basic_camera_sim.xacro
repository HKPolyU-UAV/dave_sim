<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:macro name="basic_camera_sim" params="name parent_link xyz rpy cam_namespace">
  <gazebo reference="${name}_link">
      <material>Gazebo/Red</material>
  </gazebo>

  <gazebo reference="${name}_link">
    <sensor type="camera" name="${name}_sensor">
        <update_rate>10.0</update_rate>
        <!--<pose frame="">${xyz} ${rpy}</pose>-->
        <camera name="${name}_camera">
          <horizontal_fov>${pi/2}</horizontal_fov>
          <image>
              <width>640</width>
              <height>480</height>
              <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.02</near>
            <far>20</far>
          </clip>
        </camera>
        <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
            <alwaysOn>true</alwaysOn>
            <updateRate>10.0</updateRate>
            <cameraName>${cam_namespace}</cameraName>
            <imageTopicName>image</imageTopicName>
            <cameraInfoTopicName>camera_info</cameraInfoTopicName>
            <frame_name>${name}_link</frame_name>
            <hackBaseline>0.0</hackBaseline>
            <distortionK1>0.0</distortionK1>
            <distortionK2>0.0</distortionK2>
            <distortionK3>0.0</distortionK3>
            <distortionT1>0.0</distortionT1>
            <distortionT2>0.0</distortionT2>
        </plugin>
    </sensor>
  </gazebo>
</xacro:macro>
</robot>